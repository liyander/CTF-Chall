<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;700&display=swap" rel="stylesheet">
</head>

<body>
    <div class="main-container">
        <header>
            <h1>System<span>Login</span></h1>
            <p>Authorized Personnel Only</p>
        </header>

        <main>
            <div class="card glass" style="max-width: 400px; margin: 0 auto;">
                <div class="login-form">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" id="username" placeholder="admin">
                    </div>
                    <div class="form-group" style="margin-top: 15px;">
                        <label>Password</label>
                        <input type="password" id="password" placeholder="••••••••">
                    </div>
                    <button id="loginBtn" style="width: 100%; margin-top: 20px;">AUTHENTICATE</button>
                </div>
                <div id="msg" class="error" style="margin-top: 15px; text-align: center;"></div>
            </div>

            <div style="text-align: center; margin-top: 20px;">
                <a href="/" style="color: var(--text-muted); text-decoration: none;">&larr; Back to Previewer</a>
            </div>
        </main>
    </div>

    <script>
        document.getElementById('loginBtn').addEventListener('click', async () => {
            const user = document.getElementById('username').value;
            const pass = document.getElementById('password').value;
            const msg = document.getElementById('msg');

            msg.innerText = 'Verifying...';

            try {
                const res = await fetch('/api/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username: user, password: pass })
                });
                const data = await res.json();

                if (data.error) {
                    msg.innerText = data.error;
                } else {
                    msg.style.color = '#00ff88';
                    msg.innerText = 'Access Granted.';
                    setTimeout(() => location.href = '/dashboard', 1000);
                }
            } catch (e) {
                msg.innerText = 'Connection Error';
            }
        });
    </script>
</body>

</html>